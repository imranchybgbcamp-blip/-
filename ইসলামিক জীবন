    <main id="home-sec" class="section" style="display:block;">
        <div class="grid">
            <div class="card" onclick="openSec('quran')"><i class="fas fa-quran"></i><span>১১টি পূর্ণ সূরা</span></div>
            <div class="card" onclick="openSec('azkar')"><i class="fas fa-cloud-sun"></i><span>সকাল-সন্ধ্যা</span></div>
            <div class="card" onclick="openSec('dua')"><i class="fas fa-hands-praying"></i><span>বিপদের দোয়া</span></div>
            <div class="card" onclick="openSec('namaz')"><i class="fas fa-clock"></i><span>নামাজের সময়</span></div>
            <div class="card" onclick="openSec('qibla')"><i class="fas fa-compass"></i><span>কিবলা কম্পাস</span></div>
            <div class="card" onclick="window.location.href='tel:01605969856'"><i class="fas fa-phone"></i><span>সরাসরি সাপোর্ট</span></div>
        </div>
    </main>

    <div id="content-sec" class="section">
        <button class="back-btn" onclick="openSec('home')"><i class="fas fa-arrow-left"></i> ফিরে যান</button>
        <div id="dynamic-content"></div>
    </div>

    <script>
        const appVer = "1.0";
        // আপনার GitHub ইউজারনেম imrar অনুযায়ী লিঙ্ক সেট করা হয়েছে
        const versionUrl = "https://raw.githubusercontent.com/imrar/islamic-jibon/main/version.txt";

        function openSec(id) {
            if(id === 'home') {
                document.getElementById('home-sec').style.display = 'block';
                document.getElementById('header-main').style.display = 'block';
                document.getElementById('content-sec').style.display = 'none';
            } else {
                document.getElementById('home-sec').style.display = 'none';
                document.getElementById('header-main').style.display = 'none';
                document.getElementById('content-sec').style.display = 'block';
                renderContent(id);
            }
            window.scrollTo(0,0);
        }

        function renderContent(type) {
            const container = document.getElementById('dynamic-content');
            let html = "";
            if(type === 'quran') {
                html = `<div class="item-card"><h3>সূরা ফাতিহা</h3><div class="arabic">بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيمِ...</div><p>সব প্রশংসা আল্লাহর জন্য যিনি জগতসমূহের প্রতিপালক।</p></div>
                        <div class="item-card"><h3>সূরা ইখলাস</h3><div class="arabic">قُلْ هُوَ اللَّهُ أَহাদٌ...</div><p>বলুন, তিনি আল্লাহ এক।</p></div>`;
                // এখানে বাকি সূরাগুলো একইভাবে যোগ করা যাবে
            } else if(type === 'azkar') {
                html = `<div class="item-card"><h3>সকালের আমল</h3><p>আয়তুল কুরসি পাঠ করা অত্যন্ত ফজিলতপূর্ণ।</p></div>`;
            } else if(type === 'namaz') {
                html = `<h3>নামাজের ওয়াক্ত (ঢাকা)</h3>
                        <table style="width:100%; background:white; border-radius:10px;">
                            <tr style="background:var(--primary); color:white;"><th>ওয়াক্ত</th><th>শুরু</th></tr>
                            <tr><td>ফজর</td><td>০৫:১৫</td></tr><tr><td>যোহর</td><td>১২:১৫</td></tr>
                        </table>`;
            }
            container.innerHTML = html;
        }

        async function checkUpdate() {
            try {
                const res = await fetch(versionUrl);
                const serverVer = await res.text();
                if(serverVer.trim() > appVer) {
                    document.getElementById('updateModal').style.display = 'flex';
                }
            } catch(e) {}
        }
        setTimeout(checkUpdate, 3000);
    </script>
</body>
