        /* Update Modal */
        #updateModal { display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); align-items: center; justify-content: center; }
        .modal-box { background: white; padding: 30px; border-radius: 20px; text-align: center; width: 85%; max-width: 400px; }
        .upd-btn { background: var(--primary); color: white; padding: 12px 25px; border-radius: 30px; text-decoration: none; display: inline-block; margin-top: 15px; font-weight: bold; }

