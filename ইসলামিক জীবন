    <style>
        @import url('https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@400;700&family=Amiri&display=swap');
        :root { --primary: #06402B; --secondary: #FFD700; --bg: #f4f7f6; --white: #ffffff; }
